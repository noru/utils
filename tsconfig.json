{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es6", "es2015", "es2016", "es2017", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "lib", "docs"]
}
